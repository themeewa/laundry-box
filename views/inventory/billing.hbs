<div ng-app = "mainApp" ng-controller = "billingController">
	<form ng-submit="getOrder()" class="">
		<div class="form-group">
			<input type="text" name="somekey" class="form-control" ng-model="orderid" placeholder="Search">
		</div>
		<button type="submit" class="btn btn-primary">Search Order</button>
	</form>
	<div ng-if="orderFetched">
		<table class="table table-sm" ng-if = "1">
			<thead>
			  <tr>
			    <th>No</th>
			    <th>name</th>
			    <th>phone</th>
			    <th>QTY</th>
			    <th>Date IN</th>
			    <th>date OUT</th>
			    <th>Status</th>
			    <th>net amount</th>
			    <th>Paid</th>
			  </tr>
			</thead>
			<tbody>
			  <tr>
			    <td>{[{order.orderNo}]}</td>
			    <td>{[{order.custname}]}</td>
			    <td>{[{order.custphone}]}</td>
			    <td>{[{order.ocount}]}</td>
			    <td>{[{order.odatein}]}</td>
			    <td>{[{order.odateout}]}</td>
			    <td>{[{order.ostatus}]}</td>
			    <td>{[{order.onetamount}]}</td>
			    <td>{[{order.opaid}]}</td>
			  </tr>
			</tbody>
		</table>
		<div class="clearfix"></div>
		<table class="table table-sm" ng-if = "1">
			<thead>
			  <tr>
			    <th>No</th>
			    <th>color</th>
			    <th>type</th>
			    <th>gender</th>
			    <th>rate</th>
			    <th>status</th>
			    <th>date IN</th>
			  </tr>
			</thead>
			<tbody>
			  <tr ng-repeat = "article in order.articles">
			    <td>{[{article.aid}]}</td>
			    <td>{[{article.acolour}]}</td>
			    <td>{[{article.atype}]}</td>
			    <td>{[{article.agender}]}</td>
			    <td>{[{article.arate}]}</td>
			    <td>{[{article.astatus}]}</td>
			    <td>{[{article.adatein}]}</td>
			  </tr>
			</tbody>
		</table>
	</div>
</div>